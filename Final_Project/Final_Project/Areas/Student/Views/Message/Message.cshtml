@using Final_Project.Areas.Student.Models.DomainModels;
@model Final_Project.Areas.Student.Models.DomainModels.Message

<h1>@Model.Title</h1>
<div>
</div>
<p>@Model.UserName</p>
<div>
</div>
<p>@Model.Body</p>
<div>
</div>
<form method="post" asp-action="ReplyMessage"
                      asp-route-id="@Model.id">
                                <button type="submit" class="btn btn-primary">
                                    Post Reply
                                </button>
                            </form>
                            <h2>Replies</h2>
<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr><th>Username</th><th>Title</th><th></th><th></th><th></th></tr>
    </thead>
    <tbody>
        @if (Model.Replies.Count() == 0)
    {
        <tr><td colspan="5">There are no Replies</td></tr>
    }
    else
    {
             
        @foreach (Message msg in Model.Replies)
        {
            <tr>
            <td>@msg.UserName</td>
            <td>@msg.Title</td>
            <td><form method="post" asp-action="Message"
                      asp-route-id="@msg.id">
                                <button type="submit" class="btn btn-primary">
                                    Open Message
                                </button>
                            </form></td>
                            @if (User.IsInRole("Admin") || msg.UserName == User.Identity?.Name)
                    {
                            <td><form method="post" asp-action="Delete"
                      asp-route-id="@msg.id">
                                <button type="submit" class="btn btn-primary">
                                    Delete Message
                                </button>
                            </form></td>
                    }
                            </tr>
        }
        }</tbody>
        </table>
<a asp-action="returnToLast" asp-controller="Message" asp-route-id="@Model.ParentID" class="btn btn-primary">Back</a>
